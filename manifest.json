{
  "manifest_version": 3,
  "name": "DomainTimeTracker",
  "version": "1.0",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/clock-green-16.png"
    },
    "default_title": "今日の閲覧時間"
  },
  "icons": {
    "16": "icons/clock-green-16.png"
  }
}
